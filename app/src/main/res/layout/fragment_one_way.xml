<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    tools:context=".fragment.OneWayFragment">

   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:orientation="vertical">

        <LinearLayout
            android:id="@+id/srclinear"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:background="#ededed"
            android:gravity="center"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/images_direction" />

                <TextView
                    android:id="@+id/autocompleteSource"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:hint="SOURCE" />

            </LinearLayout>


        </LinearLayout>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
        <LinearLayout
            android:id="@+id/deslinear"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/srclinear"
            android:layout_gravity="center"
            android:layout_marginTop="5dp"
            android:background="#ededed"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/img11"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/icons8_google_maps_48" />
        <TextView
            android:id="@+id/autoDestintion"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="Destination"/>

                </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/datelinear"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/deslinear"

            android:padding="5dp"
            android:layout_gravity="center"
            android:layout_marginTop="5dp"
            android:background="#ededed"
            android:gravity="center"
            android:orientation="vertical">


            <EditText
                android:id="@+id/Birthday"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="10dp"
                android:drawableLeft="@drawable/ic_baseline_date_range_24"
                android:clickable="true"
                android:editable="false"
                android:hint="Date" />

            <EditText
                android:id="@+id/timepicker"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="10dp"
                android:layout_marginTop="10dp"
                android:drawableLeft="@drawable/ic_baseline_watch_later_24"
                android:clickable="true"
                android:hint="Time" />

        </LinearLayout>
       <androidx.appcompat.widget.AppCompatButton
           android:id="@+id/cab_list"
           android:layout_width="100dp"
           android:layout_height="50dp"
           android:layout_marginTop="10dp"
           android:text="Search"
           android:background="@drawable/cab_btn_rnd"
           android:layout_gravity="right"
           android:layout_marginRight="20dp"/>
   </LinearLayout>
    </ScrollView>
